<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgImageActor"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/background_film"
            app:shapeAppearanceOverlay="@style/cornerImage3"
            >
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:layout_height="2dp"
            style="@style/txtDetailStyle1"
            android:layout_margin="5dp"
            android:text="  "
            android:background="@color/general_background_color2"
            android:textColor="@color/black"
            tools:ignore="HardcodedText">
        </TextView>

        <TextView
            android:id="@+id/txtActorName"
            style="@style/txtDetailStyle1"
            android:text="Tên "
            android:textSize="25sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText">
        </TextView>
        <TextView
            android:id="@+id/txtActorCharacter"

            style="@style/txtDetailStyle1"
            android:text="Vai diễn"
            android:textColor="@color/black"
            tools:ignore="HardcodedText">
        </TextView>


        <TextView
           android:id="@+id/txtActorGender"
            style="@style/txtDetailStyle1"
            android:text="Giới tính"
            android:textColor="@color/black"
            tools:ignore="HardcodedText">
        </TextView>






</LinearLayout>